{
  "Routes": [
    {
      "DownstreamPathTemplate": "/{path}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/web/{path}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "ServiceName": "web-client-bff",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    {
      "DownstreamPathTemplate": "/ws/{path}",
      "DownstreamScheme": "ws",
      "UpstreamPathTemplate": "/ws/web/{path}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "ServiceName": "web-client-bff",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },

    {
      "DownstreamPathTemplate": "/{path}",
      "DownstreamScheme": "https",
      "UpstreamPathTemplate": "/telegram/{path}",
      "UpstreamHttpMethod": [ "POST" ],
      "ServiceName": "telegram-client",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    
    {
      "DownstreamPathTemplate": "/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "web-client",
          "Port": 3000
        }
      ],
      "UpstreamPathTemplate": "/{path}",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "localhost",
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "consul",
      "Port": 8500,
      "Type": "Consul"
    }
  }
}