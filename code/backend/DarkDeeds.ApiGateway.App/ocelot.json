{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/web/{path}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/web/api/{path}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "ServiceName": "backend",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    {
      "DownstreamPathTemplate": "/ws/web/{path}",
      "DownstreamScheme": "ws",
      "UpstreamPathTemplate": "/ws/web/{path}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "ServiceName": "backend",
      "LoadBalancerOptions": {
        "Type": "NoLoadBalancer"
      }
    },

    {
      "DownstreamPathTemplate": "/api/tlgm/{path}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/telegram/api/{path}",
      "UpstreamHttpMethod": [ "POST" ],
      "ServiceName": "backend",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },

    {
      "DownstreamPathTemplate": "/api/{path}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/api/{path}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "ServiceName": "backend",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    },
    
    {
      "DownstreamPathTemplate": "/{path}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/{path}",
      "UpstreamHttpMethod": [ "GET" ],
      "ServiceName": "web-client",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "localhost",
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "consul",
      "Port": 8500,
      "Type": "Consul"
    }
  }
}