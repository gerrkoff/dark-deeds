{
  "name": "dark-deeds",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@microsoft/signalr": "^6.0.2",
    "connected-react-router": "^6.9.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-dragula": "^1.1.17",
    "react-redux": "^7.2.6",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-toastify": "^4.5.2",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "semantic-ui-calendar-react": "^0.15.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@semantic-ui-react/css-patch": "^1.0.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^23.3.14",
    "@types/node": "^10.17.5",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.22",
    "@types/react-router": "^5.1.2",
    "@types/react-router-dom": "^5.1.2",
    "copyfiles": "2.1.0",
    "cross-env": "^5.2.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "node-sass": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react-scripts": "^5.0.0",
    "react-test-renderer": "^16.12.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build-css": "cross-env CI=true node-sass src/ -o src/",
    "build-js": "cross-env CI=true react-scripts build",
    "build-copy": "npx copyfiles \"build/**\" \"../server/build\" -u 1 -e build && echo files copied",
    "build": "npm run build-css && npm run build-js && npm run build-copy",
    "test-ci": "npm run fmt:check && cross-env CI=true react-scripts test --env=jsdom",
    "start-css": "node-sass src/ -o src/ --watch --recursive",
    "start-js": "cross-env BROWSER=none react-scripts start",
    "start": "npm-run-all -p start-css start-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint . -c .eslintrc.js --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "fmt": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|scss|md|ts|tsx)\"",
    "fmt:check": "prettier --check \"**/*.+(js|jsx|json|yml|yaml|scss|md|ts|tsx)\"",
    "postinstall": "semantic-ui-css-patch"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
